                <ProgressRing Foreground="White"  IsActive="True" Height="70" Width="70"></ProgressRing>
                <Image Height="40" Width="40" Source="Assets/Square44x44Logo.png"></Image>
            </Grid>
            <TextBlock Text="Initializing Lemuria"></TextBlock>
        </StackPanel>
    </Grid>
