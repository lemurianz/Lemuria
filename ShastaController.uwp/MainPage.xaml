                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Face Detection" FontSize="20"></TextBlock>
                            <TextBlock Grid.Row="1" Text="Coming soon" FontSize="8" FontWeight="Normal"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
